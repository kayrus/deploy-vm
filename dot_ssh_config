Host flatcar?
  User core
  IdentityFile ~/.ssh/id_rsa
  StrictHostKeyChecking no
  UserKnownHostsFile ~/.ssh/known_hosts.flatcar
  # used by fleet
  ForwardAgent yes
  UseRoaming no

Host k8s-*
  User core
  IdentityFile ~/.ssh/id_rsa
  StrictHostKeyChecking no
  UserKnownHostsFile ~/.ssh/known_hosts.k8s
  UseRoaming no

